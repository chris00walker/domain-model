{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@admin/*": ["src/admin/*"],
      "@catalog/*": ["src/catalog/*"],
      "@customers/*": ["src/customers/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@invoicing/*": ["src/invoicing/*"],
      "@ordering/*": ["src/ordering/*"],
      "@pricing/*": ["src/pricing/*"],
      "@shipping/*": ["src/shipping/*"],
      "@subscriptions/*": ["src/subscriptions/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
